 <amq:connectionFactory id="mqconnectionfactory" brokerURL="tcp://192.168.0.14:61616" />
 <amq:topic id="topicpp" physicalName="chattopicpp"></amq:topic>
<!--  <context:component-scan base-package="jms.chat.App" />-->
 
 
   <!-- JmsTemplate Definition   -->
  <bean id="jmsTemplate" class="org.springframework.jms.core.JmsTemplate">
    <property name="connectionFactory" ref="mqconnectionfactory" />
   
  </bean>
 
 <bean id="basicjmschat" class="com.spring.jms.BasicJmsChat">
    <property name="chatJMStemplate" ref="jmsTemplate" />
    <property name="topic" ref="topicpp" />
  </bean>
 
 
 
  <!-- =============================================== -->
  <!-- JMS Common, Define JMS connectionFactory       -->
  <!-- =============================================== -->
  <!-- Activemq connection factory -->
  <bean id="amqConnectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
    <!-- brokerURL, You may have different IP or port -->
    <constructor-arg index="0" value="tcp://192.168.0.14:61616" />
  </bean>
 
  <!-- Pooled Spring connection factory -->
  <bean id="connectionFactory"
    class="org.springframework.jms.connection.CachingConnectionFactory">
    <constructor-arg ref="amqConnectionFactory" />
  </bean>
 
  <!-- ======================================================= -->
  <!-- JMS Send, define default destination and JmsTemplate    -->
  <!-- ======================================================= -->
  <!-- Default Destination Queue Definition 
  <bean id="defaultDestination" class="org.apache.activemq.command.ActiveMQQueue">
    <!-- name of the queue 
    <constructor-arg index="0" value="Send2Recv" />
  </bean>-->
  
  <bean id="poiMessageListenerContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
  <property name="connectionFactory" ref="mqconnectionfactory"/>
   <property name="destination" ref="topicpp"/>
    <property name="messageListner" ref="jmsTemplate"/>
     <property name="cuncurrentconsumers" value="1"/>
  </bean>
 

